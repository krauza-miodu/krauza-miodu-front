{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer",
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "arrow-parens": false,
    "array-bracket-spacing": [true, "never"],
    "ban": [true, "eval", "alert", "prompt", "confirm"],
    "block-spacing": [true, "always"],
    "brace-style": [true, "1tbs"],
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "complexity": false,
    "curly": true,
    "deprecation": {"severity": "warn"},
    "eofline": true,
    "forin": true,
    "handle-callback-err": false,
    "import-spacing": true,
    "interface-over-type-literal": true,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "max-file-line-count": false,
    "max-line-length": [true, {"limit": 160, "ignore-pattern": "^import [^,]+ from |^export | implements "}],
    "member-access": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [true, "log"],
    "no-constant-condition": [true, {"checkLoops": false}],
    "no-construct": true,
    "no-control-regex": true,
    "no-debugger": true,
    "no-duplicate-case": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-empty-character-class": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-inner-declarations": [true, "functions"],
    "no-invalid-regexp": true,
    "no-misused-new": true,
    "no-multi-spaces": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-regex-spaces": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unexpected-multiline": true,
    "no-unnecessary-initializer": true,
    "no-unsafe-finally": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "radix": false,
    "semicolon": [true, "always"],
    "sort-imports": [false],
    "space-in-parens": [true, "never"],
    "switch-default": false,
    "ter-arrow-body-style": false,
    "ter-arrow-parens": [true, "as-needed", {"requireForBlockBody": false}],
    "ter-arrow-spacing": [true, {"after": true, "before": true}],
    "ter-computed-property-spacing": [true, "never"],
    "ter-func-call-spacing": [true, "never"],
    "ter-indent": [true, 2, {"SwitchCase": 1}],
    "ter-no-irregular-whitespace": [true],
    "ter-no-mixed-spaces-and-tabs": {"type": "spaces"},
    "ter-no-proto": true,
    "ter-no-script-url": true,
    "ter-no-self-compare": true,
    "ter-no-sparse-arrays": [true],
    "ter-no-tabs": true,
    "ter-padded-blocks": [true, {"blocks": "never", "classes": "always", "switches": "never"}],
    "ter-prefer-arrow-callback": [true],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "triple-equals": true,
    "unified-signatures": true,
    "use-isnan": true,
    "valid-typeof": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "template-banana-in-box": true,
    "contextual-lifecycle": true,
    "contextual-decorator": true,
    "no-pipe-impure": true,
    "template-no-negated-async": true,
    "component-max-inline-declarations": true,
    "no-attribute-decorator": true,
    "no-conflicting-lifecycle": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-lifecycle-call": true,
    "no-output-native": true,
    "no-output-rename": true,
    "prefer-output-readonly": true,
    "template-use-track-by-function": true,
    "use-lifecycle-interface": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "angular-whitespace": [true, "check-interpolation", "check-semicolon", "check-pipe"],
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "use-component-selector": true,
    "no-queries-metadata-property": true,
    "no-host-metadata-property": true,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true
  }
}
